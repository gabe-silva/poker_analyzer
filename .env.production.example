# App mode
TRAINER_ENV=production
TRAINER_SECRET_KEY=replace-with-random-64-char-secret
TRAINER_REQUIRE_AUTH=1

# Domain + network hardening
TRAINER_PUBLIC_BASE_URL=https://your-domain.com
TRAINER_ALLOWED_HOSTS=your-domain.com,www.your-domain.com,yourusername.pythonanywhere.com
TRAINER_FORCE_HTTPS=1
TRAINER_COOKIE_SECURE=1

# Session/auth settings
TRAINER_SESSION_TTL_DAYS=30
TRAINER_LOGIN_CODE_TTL_SECONDS=600
TRAINER_LOGIN_CODE_COOLDOWN_SECONDS=60
TRAINER_EXPOSE_LOGIN_CODES=0
TRAINER_SESSION_COOKIE_NAME=poker_trainer_session
TRAINER_ALLOW_FREE_TIER=1

# Data
TRAINER_DB_PATH=/home/yourusername/poker_analyzer/trainer/data/trainer.db

# Stripe billing
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_ELITE=price_...

# Mailgun for login code email
MAILGUN_API_KEY=key-...
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=Poker Trainer <noreply@mg.yourdomain.com>
